<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_beij"
    android:weightSum="1">
    <TextView
        android:id="@+id/iv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="@dimen/y25"
        android:paddingLeft="@dimen/y25"
        android:paddingTop="@dimen/y10"
        android:paddingBottom="@dimen/y10"
        android:layout_marginRight="25px"
        android:layout_marginTop="25px"
        android:background="@drawable/on_off"
        android:gravity="center"
        android:text="我要上班"
        android:textColor="@color/white"
        android:textSize="20px"
        />
   <com.myrescue.utils.CircleImageView
        android:id="@+id/icon"
        android:clickable="true"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/driver"
        app:border_color="#fff"
        app:border_width ="2dp"
        android:background="@null"
        android:layout_weight="0.03"/>

    <TextView
        android:layout_marginTop="@dimen/y25"
        android:layout_gravity="center"
        android:id="@+id/driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="张师傅"
        android:textColor="@color/white"
        android:textSize="40px"
        />
    <!--上下班切换列表-->
    <Spinner
        android:layout_marginTop="5px"
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:entries="@array/spingarr1"

        />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_weight="1"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="54px"
        android:orientation="vertical">
    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="223"
        android:textColor="#fff"
        android:textSize="30px"
        />
        <View
            android:layout_width="30dp"
            android:layout_height="2px"
            android:background="@color/white"
            />
        <TextView
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成订单"
            android:textColor="#fff"
            android:textSize="30px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="232"
            android:textColor="#fff"
            android:textSize="30px"
            />
        <View
            android:layout_width="60px"
            android:layout_height="2px"
            android:background="@color/white"
            />
        <TextView
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行驶里程"
            android:textColor="#fff"
            android:textSize="30px"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="right"
       android:layout_weight="1"
        android:layout_marginRight="54px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4234"
            android:textColor="#fff"
            android:textSize="30px"
            />
        <View
            android:layout_width="63px"
            android:layout_height="2px"
            android:background="@color/white"
            />
        <TextView
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计收益"
            android:textColor="#fff"
            android:textSize="28px"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/beijing_left"
        android:layout_marginLeft="@dimen/beijing_left"
        android:layout_marginRight="@dimen/beijing_left"
        android:background="@drawable/map_bottom1"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <LinearLayout


            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/map_bottom1"
            android:orientation="vertical"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/mn"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/order_center1"
                />
            <TextView
                android:layout_marginTop="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单中心"

                />
           </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/map_bottom1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageButton
                    android:onClick="onClick"
                    android:id="@+id/acc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/order_center1"
                    />
                <TextView
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账户中心"

                    />
            </LinearLayout>
    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/map_bottom1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageButton
                    android:id="@+id/loc"
                    android:onClick="onClick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/positioning"
                    />
                <TextView
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地图"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/map_bottom1"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageButton
                    android:onClick="onClick"
                    android:id="@+id/help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/help_center"
                    />
                <TextView
                    android:layout_marginTop="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="帮助中心"

                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>